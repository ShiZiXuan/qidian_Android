<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/ez10dp"
    >
<ImageView
    android:id="@+id/invite_iv"
    android:layout_width="@dimen/ez25dp"
    android:layout_height="@dimen/ez25dp"
    android:src="@drawable/ic_launcher"

    />
    <TextView
        android:id="@+id/invite_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ez8dp"
        android:text="西西"
        android:layout_marginTop="@dimen/ez5dp"
        />
</LinearLayout>
    <TextView
        android:id="@+id/invite_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="邀请好友"
        android:textColor="#0099ff"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/ez10dp"
        android:layout_centerVertical="true"
        />
</RelativeLayout>