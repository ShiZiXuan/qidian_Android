<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_car_money"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eee"

    tools:context="com.uautogo.qidian.activity.CarMoneyActivity">


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ez40dp"
        android:background="@color/color_theme"
        >
        <ImageView
            android:id="@+id/car_back"
            android:layout_width="@dimen/ez20dp"
            android:layout_height="@dimen/ez20dp"
            android:src="@drawable/back_white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ez11dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的车克"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="#fff"
            />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/rl"
        android:layout_marginTop="@dimen/ez3dp"
        android:background="#fff"
        >
        <TextView
            android:id="@+id/toMoneyDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账单明细"

            android:layout_margin="@dimen/ez10dp"
            android:textColor="#000"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/ez5dp"
            android:textSize="16sp"
            />

        <ImageView
            android:layout_width="@dimen/ez200dp"
            android:layout_height="@dimen/ez100dp"
            android:src="@drawable/carmoney_icon"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的车克"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/ez20dp"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/carMoney_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10个"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/ez5dp"
            android:textSize="20sp"
            />
        <Button
            android:id="@+id/rechange"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ez40dp"
            android:background="@drawable/shape_makemoney"
            android:text="充值"
            android:textColor="#fff"
            android:layout_marginLeft="@dimen/ez30dp"
            android:layout_marginRight="@dimen/ez30dp"
            android:layout_marginTop="@dimen/ez20dp"
            android:textSize="18sp"


            />
        <Button
            android:id="@+id/makeMoney"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ez40dp"
            android:background="@drawable/shape"
            android:text="提现"
            android:textColor="#fff"
            android:layout_marginLeft="@dimen/ez30dp"
            android:layout_marginRight="@dimen/ez30dp"
            android:layout_marginTop="@dimen/ez15dp"
            android:textSize="18sp"
            android:layout_marginBottom="@dimen/ez20dp"

            />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/ez20dp"
        android:layout_alignParentBottom="true"

        >
        <TextView
            android:id="@+id/carMoney_problem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="常见问题"
            android:layout_gravity="center"
            android:textColor="#3366cc"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本服务由北京启点车联科技有限公司提供"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/ez5dp"
            android:textColor="#000"
            />
    </LinearLayout>
</RelativeLayout>
