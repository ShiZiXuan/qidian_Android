<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cke_pay_ok"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.uautogo.qidian.activity.CkePayOkActivity">
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/ez45dp"
        android:background="@color/color_theme">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:src="@drawable/back_white"/>

        <TextView
            android:id="@+id/illegal_top_bar_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="支付完成"
            android:textColor="@color/white"
            android:textSize="18sp"/>
    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/ez70dp"
    android:gravity="center"

    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >
    <ImageView
        android:id="@+id/iv"
        android:layout_width="@dimen/ez100dp"
        android:layout_height="@dimen/ez100dp"
        android:src="@drawable/carmoney_icon"

        />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cke_pay_ok"
            android:layout_alignBottom="@id/iv"
            android:layout_alignRight="@id/iv"
            android:layout_marginLeft="@dimen/ez10dp"
            android:layout_marginBottom="@dimen/ez10dp"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付成功"
        android:layout_marginTop="@dimen/ez10dp"
        android:textSize="18sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="118CKE"
        android:layout_marginTop="@dimen/ez10dp"
        android:textSize="18sp"
        android:textColor="#0099ff"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/ez80dp"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="付款方式:车克支付"

            />
        <Button
            android:id="@+id/cke_ok_toNext"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ez30dp"
            android:text="完成"
            android:background="@drawable/shape_money"
            android:textColor="#0099ff"
            android:layout_marginTop="@dimen/ez10dp"
            />
    </LinearLayout>
</RelativeLayout>
