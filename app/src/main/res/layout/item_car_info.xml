<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/ez15dp"
              android:layout_marginRight="@dimen/ez15dp"
              android:layout_marginTop="@dimen/ez8dp"
              android:background="@drawable/shape"
              android:orientation="vertical">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/car_item_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="车牌号:88888"
        android:textColor="#fff"
        android:textSize="18sp"
        android:layout_margin="@dimen/ez15dp"
        />
    <TextView
        android:id="@+id/car_item_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="办理中"
        android:textColor="#FFD54B"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/ez15dp"
        android:textSize="20sp"
        />
</RelativeLayout>
    <TextView
        android:id="@+id/car_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="车型:blablablablabla"
        android:textColor="#fff"
        android:layout_marginTop="@dimen/ez5dp"
        android:layout_marginLeft="@dimen/ez15dp"
        />
    <TextView
        android:id="@+id/car_item_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="车牌识别代码:aaaaaaaaa"
        android:textColor="#fff"
        android:layout_marginTop="@dimen/ez3dp"
        android:layout_marginLeft="@dimen/ez15dp"
        />
    <TextView
        android:id="@+id/car_item_module"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="型号:小型轿车"
        android:textColor="#fff"
        android:layout_marginTop="@dimen/ez3dp"
        android:layout_marginLeft="@dimen/ez15dp"
        android:layout_marginBottom="@dimen/ez10dp"
        />
</LinearLayout>
