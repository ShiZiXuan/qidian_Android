<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ez10dp"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/ez5dp"
                android:layout_height="@dimen/ez10dp"
                android:layout_marginLeft="@dimen/ez10dp"
                android:layout_marginTop="@dimen/ez3dp"
                android:background="#0099ff" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ez2dp"
                android:text="示例"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/ez8dp"
                android:src="@drawable/tanhao" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/ez5dp"
                android:text="请拍摄"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                android:text="行驶证所有人"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                android:text="身份证,确保文字清晰"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/ez5dp">

            <ImageView
                android:layout_width="@dimen/ez100dp"
                android:layout_height="@dimen/ez80dp"
                android:layout_weight="1"
                android:src="@drawable/zheng" />

            <ImageView
                android:layout_width="@dimen/ez100dp"
                android:layout_height="@dimen/ez80dp"
                android:layout_weight="1"

                android:src="@drawable/fan" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ez3dp"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ez10dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/ez5dp"
                    android:layout_height="@dimen/ez10dp"

                    android:layout_marginTop="@dimen/ez4dp"
                    android:background="#0099ff" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ez2dp"
                    android:text="示例"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/ez8dp"
                    android:src="@drawable/tanhao" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/ez5dp"
                    android:text="请拍摄"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"

                    android:text="行驶证所有人"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"

                    android:text="任意银行卡正面"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/ez150dp"
                    android:layout_height="@dimen/ez80dp"

                    android:layout_marginTop="@dimen/ez8dp"
                    android:src="@drawable/yin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ez8dp"
                    android:inputType="textMultiLine"
                    android:text="  温馨提示:银行卡仅用于个人信息认证,不参与日后通行付费,请放心办理。"
                    android:textColor="#999" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ez3dp"
            android:layout_marginTop="@dimen/ez5dp"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ez10dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/ez5dp"
                    android:layout_height="@dimen/ez10dp"
                    android:layout_marginLeft="@dimen/ez10dp"
                    android:layout_marginTop="@dimen/ez4dp"
                    android:background="#0099ff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/ez5dp"
                    android:text="请拍摄"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"

                    android:text="行驶证所有人"
                    android:textColor="#fcd901" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"

                    android:text="身份证正反面"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/ez5dp">

            <RelativeLayout
                android:id="@+id/shenfenzheng_zheng_rl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ez5dp"
                android:layout_marginRight="@dimen/ez5dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/upload1_iv"
                    android:layout_width="@dimen/ez120dp"
                    android:layout_height="@dimen/ez80dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/b" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="@dimen/ez10dp"
                    android:text="身份证正面"
                    android:textColor="#000" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/shenfenzheng_fan_rl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ez5dp"
                android:layout_marginRight="@dimen/ez5dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/upload2_iv"
                    android:layout_width="@dimen/ez120dp"
                    android:layout_height="@dimen/ez80dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/b" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="@dimen/ez10dp"
                    android:text="身份证反面"
                    android:textColor="#000" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ez3dp"
            android:background="@color/gray"
            android:layout_marginTop="@dimen/ez5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ez10dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/ez5dp"
                    android:layout_height="@dimen/ez10dp"

                    android:layout_marginTop="@dimen/ez4dp"
                    android:background="#0099ff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/ez5dp"
                    android:text="请拍摄"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="行驶证所有人"
                    android:textColor="#fcd901" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"

                    android:text="银行卡"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/yinhangka_copy_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ez5dp"
                android:layout_marginLeft="@dimen/ez10dp"
                android:layout_marginTop="@dimen/ez5dp">

                <ImageView
                    android:id="@+id/upload6_iv"
                    android:layout_width="@dimen/ez120dp"
                    android:layout_height="@dimen/ez80dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/b" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="@dimen/ez10dp"
                    android:text="任意一张银行卡"
                    android:textColor="#000" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ez3dp"
            android:layout_marginTop="@dimen/ez5dp"
            android:background="@color/gray" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证当前银行卡预留手机号"
            android:layout_marginTop="@dimen/ez15dp"
            android:layout_marginLeft="@dimen/ez10dp"
            android:textSize="18sp"
            android:textColor="#000"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/ez10dp"
            android:paddingRight="@dimen/ez10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:textColor="#000"
                />
            <EditText
                android:id="@+id/bank_phone_et"
                android:layout_width="@dimen/ez0dp"
                android:layout_height="@dimen/ez40dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入手机号"
                android:inputType="number"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="14sp"
                android:layout_marginLeft="@dimen/ez10dp"
                />

            <TextView
                android:id="@+id/get_certification_code_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送验证码"
                android:visibility="gone"

                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ez1dp"
            android:layout_marginTop="@dimen/ez4dp"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ez10dp"
            android:orientation="horizontal"
            android:paddingRight="@dimen/ez10dp"
            android:visibility="gone">

            <EditText
                android:id="@+id/certification_code_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ez10dp"
                android:layout_marginLeft="@dimen/ez20dp"
                android:layout_marginTop="@dimen/ez8dp"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="15sp"
                android:visibility="gone" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ez1dp"
            android:layout_marginTop="@dimen/ez5dp"
            android:background="@color/gray"
            android:visibility="gone" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gv_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ez10dp"
            android:src="@drawable/car_owener_gif"
            android:layout_marginLeft="@dimen/ez20dp"
            android:layout_marginRight="@dimen/ez20dp"
            />
        <Button
            android:id="@+id/copy_bt"
            android:layout_width="@dimen/ez50dp"
            android:layout_height="@dimen/ez30dp"
            android:text="复制"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/ez50dp"

            android:textColor="#000"
            android:background="@drawable/shape_yellow_but"
            android:layout_marginTop="@dimen/ez200dp"
            />

        </RelativeLayout>
    </LinearLayout>

</ScrollView>
