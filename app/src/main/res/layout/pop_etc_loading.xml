<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9000"
    android:gravity="center"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_marginLeft="@dimen/ez20dp"
        android:layout_marginRight="@dimen/ez20dp"
        >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择支付方式"
        android:textColor="#000"
        android:layout_margin="@dimen/ez10dp"
        android:textSize="18sp"
        />
    <ImageView
        android:id="@+id/pop_etc_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pass_dialog_cancel"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/ez10dp"
        />
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ez1dp"
        android:background="#ccc"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ez5dp"
        android:layout_marginTop="@dimen/ez8dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fuel_wx"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/ez10dp"
            android:text="微信支付"
            android:textSize="16sp"
            android:textColor="#000"
            />

        <View style="@style/view_weight_width"></View>

        <CheckBox
            android:id="@+id/fuelcard_wxPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/ez10dp"
            android:background="@drawable/check_selector"
            android:button="@null"
            />
    </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/ez1dp"
    android:background="#eee"
    android:layout_marginTop="@dimen/ez3dp"
    android:layout_marginLeft="@dimen/ez10dp"
    android:layout_marginRight="@dimen/ez10dp"
    />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ez5dp"
        android:layout_marginTop="@dimen/ez8dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fuel_ali"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/ez10dp"
            android:text="支付宝支付"
            android:textSize="16sp"
            android:textColor="#000"
            />


        <View style="@style/view_weight_width"></View>

        <CheckBox
            android:id="@+id/fuelcard_alipay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/ez10dp"
            android:background="@drawable/check_selector"
            android:button="@null"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ez1dp"
        android:background="#eee"
        android:layout_marginTop="@dimen/ez3dp"
        android:layout_marginLeft="@dimen/ez10dp"
        android:layout_marginRight="@dimen/ez10dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ez5dp"
        android:layout_marginTop="@dimen/ez8dp"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/ez5dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fuel_ck"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/ez10dp"
            android:text="车克支付"
            android:textSize="16sp"
            android:textColor="#000"
            />


        <View style="@style/view_weight_width"></View>

        <CheckBox
            android:id="@+id/fuelcard_ckePay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/ez10dp"
            android:background="@drawable/check_selector"

            android:button="@null"
            />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>