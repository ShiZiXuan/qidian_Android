<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"

    >


        <RelativeLayout
            android:id="@+id/illegal_top_bar"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="@color/color_theme">

            <ImageView
                android:id="@+id/back_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:src="@drawable/back_white"/>

            <TextView
                android:id="@+id/illegal_top_bar_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="加油卡充值"
                android:textColor="@color/white"
                android:textSize="18sp"/>
        </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/ez2dp"
    android:background="#ccc"
    />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ez35dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/ez5dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ez5dp"
                android:text="姓名:"
                android:textSize="18sp"
                android:textColor="#000"
                />

            <EditText
                android:id="@+id/fuelcard_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ez10dp"
                android:layout_marginRight="@dimen/ez20dp"
                android:background="@null"
                android:cursorVisible="true"
                android:textCursorDrawable="@null"
                />

        </LinearLayout>

        <View
            style="@style/view_gray_lines_vertical"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ez35dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ez5dp"
                android:text="油卡类型:"
                android:textSize="18sp"
                android:textColor="#000"
                />

            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/ez10dp"
          />
        </LinearLayout>

        <View
            style="@style/view_gray_lines_vertical"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ez35dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ez5dp"
                android:text="油卡账号:"
                android:textSize="18sp"
                android:textColor="#000"
                />

            <EditText
                android:id="@+id/fuelcard_fuelNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ez10dp"
                android:layout_marginRight="@dimen/ez20dp"
                android:background="@null"
                android:digits="1234567890"
                android:cursorVisible="true"
                android:textCursorDrawable="@null"
                />
        </LinearLayout>

        <View
            style="@style/view_gray_lines_vertical"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ez30dp"
            android:layout_marginLeft="@dimen/ez5dp"
            android:layout_marginTop="@dimen/ez5dp"
            android:text="选择金额:"
            android:textSize="18sp"
            android:textColor="#000"
            />

        <com.uautogo.qidian.view.MyGridview
            android:id="@+id/fuelcard_gv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:layout_marginLeft="@dimen/ez10dp"
            android:layout_marginRight="@dimen/ez10dp"
            android:layout_marginTop="@dimen/ez8dp"
            >

        </com.uautogo.qidian.view.MyGridview>
        <View
            style="@style/view_gray_lines_vertical"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="15dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ez35dp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/ez5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ez5dp"
                android:text="支付金额:"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_gravity="center_vertical"
                />

            <View style="@style/view_weight_width"></View>

            <TextView
                android:id="@+id/fuelcard_payMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/ez10dp"
                android:text="100元"
                android:textSize="18sp"
                android:textColor="#0099ff"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>

        <View
            style="@style/view_gray_lines_vertical"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="@dimen/ez5dp"
           ></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ez5dp"
            android:layout_marginTop="@dimen/ez8dp"
            android:text="支付方式:"
            android:textSize="18sp"
            android:textColor="#000"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ez15dp"
            android:layout_marginTop="@dimen/ez18dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fuel_ck"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/ez10dp"
                android:text="车克支付"
                android:textSize="16sp"
                android:textColor="#000"
                />


            <View style="@style/view_weight_width"></View>

            <CheckBox
                android:id="@+id/fuelcard_ckePay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/ez10dp"
                android:background="@drawable/check_selector"
                android:checked="true"
                android:button="@null"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ez15dp"
            android:layout_marginTop="@dimen/ez12dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fuel_wx"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/ez10dp"
                android:text="微信支付"
                android:textSize="16sp"
                android:textColor="#000"
                />

            <View style="@style/view_weight_width"></View>

            <CheckBox
                android:id="@+id/fuelcard_wxPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/ez10dp"
                android:background="@drawable/check_selector"
                android:button="@null"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ez15dp"
            android:layout_marginTop="@dimen/ez12dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fuel_ali"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/ez10dp"
                android:text="支付宝支付"
                android:textSize="16sp"
                android:textColor="#000"
                />


            <View style="@style/view_weight_width"></View>

            <CheckBox
                android:id="@+id/fuelcard_alipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/ez10dp"
                android:background="@drawable/check_selector"
                android:button="@null"
                />
        </LinearLayout>

        <View
            style="@style/view_gray_lines_vertical"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="@dimen/ez15dp"></View>

        <Button
            android:id="@+id/fuelcard_pay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ez40dp"
            android:background="@drawable/shape"
            android:text="立即充值"
            android:textColor="#fff"
            android:layout_marginLeft="@dimen/ez30dp"
            android:layout_marginRight="@dimen/ez30dp"
            android:layout_marginTop="@dimen/ez40dp"
            android:textSize="18sp"
            android:layout_marginBottom="@dimen/ez25dp"

            />
    </LinearLayout>
    </ScrollView>
</LinearLayout>
