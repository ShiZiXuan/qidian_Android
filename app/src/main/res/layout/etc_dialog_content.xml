<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_etc"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#e9e9e9"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              tools:context="com.uautogo.qidian.activity.ETCActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ez5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ez3dp"
            android:text="ETC详情"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/cancel_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/ez3dp"
            android:src="@drawable/out"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/start_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ez5dp"
        android:paddingLeft="@dimen/ez8dp"
        android:paddingRight="@dimen/ez8dp"
        android:text="2017年10月11日 12:05:06于宝盛里进入高速路段"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/end_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ez5dp"
        android:paddingLeft="@dimen/ez8dp"
        android:paddingRight="@dimen/ez8dp"
        android:text="2017年12月20日 18:15:16于清河离开高速路段"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ez30dp"
        android:layout_marginTop="@dimen/ez5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/ez0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ez8dp"
            android:layout_weight="1"
            android:text="时长:"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/duration_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/ez8dp"
            android:paddingRight="@dimen/ez8dp"
            android:text="1111"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ez30dp"
        android:layout_marginTop="@dimen/ez5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/ez0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ez8dp"
            android:layout_weight="1"
            android:text="路程:"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/distance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/ez8dp"
            android:paddingRight="@dimen/ez8dp"
            android:text="11111"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ez30dp"
        android:layout_marginTop="@dimen/ez5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/ez0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ez8dp"
            android:layout_weight="1"
            android:text="费用:"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/ez8dp"
            android:paddingRight="@dimen/ez8dp"
            android:text="1111"
            android:textSize="15sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/pay_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ez3dp"
        android:background="@drawable/pay_background"
        android:text="支付"
        android:textColor="@color/white"
        android:textSize="20sp"/>

</LinearLayout>
