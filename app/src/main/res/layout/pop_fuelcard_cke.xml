<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9000"
    android:gravity="center_horizontal"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/ez10dp"
        android:layout_marginRight="@dimen/ez10dp"
        android:background="#fff"
        android:layout_marginTop="@dimen/ez90dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ez10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请输入支付密码"
                android:layout_marginLeft="@dimen/ez10dp"

                />
            <ImageView
                android:id="@+id/pass_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pass_dialog_cancel"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/ez10dp"
                />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ez1dp"
            android:background="#ccc"
            android:layout_marginLeft="@dimen/ez10dp"
            android:layout_marginRight="@dimen/ez10dp"
            android:layout_marginTop="@dimen/ez10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车克金额"
            android:layout_marginTop="@dimen/ez10dp"
            android:layout_gravity="center"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
        <TextView
            android:id="@+id/pop_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="#0099ff"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/ez3dp"
            />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CKE"
                android:textColor="#0099ff"

                android:layout_gravity="center"
                android:layout_marginTop="@dimen/ez5dp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ez1dp"
            android:background="#ccc"
            android:layout_marginLeft="@dimen/ez10dp"
            android:layout_marginRight="@dimen/ez10dp"
            android:layout_marginTop="@dimen/ez15dp"
            />
        <com.jungly.gridpasswordview.GridPasswordView
            android:id="@+id/pswView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ez40dp"

            app:gpvTextColor="#ccc"
            app:gpvTextSize="25sp"
            app:gpvLineColor="#ccc"
            app:gpvLineWidth="1dp"
            app:gpvGridColor="#ffffff"
            app:gpvPasswordLength="6"
            app:gpvPasswordTransformation="*"
            android:layout_marginTop="@dimen/ez20dp"
            android:layout_marginBottom="@dimen/ez10dp"

            android:layout_marginLeft="@dimen/ez10dp"
            android:layout_marginRight="@dimen/ez10dp"
            />
        <TextView
            android:id="@+id/forgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="@dimen/ez15dp"
            android:text="忘记密码?"
            android:textColor="#0099ff"
            />

    </LinearLayout>
</LinearLayout>