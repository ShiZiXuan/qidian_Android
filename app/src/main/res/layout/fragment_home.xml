<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bac"

    >

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/ez4dp"
        />


        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ez20dp"
            android:layout_marginRight="@dimen/ez20dp"
            android:layout_marginTop="@dimen/ez20dp"
            android:layout_below="@id/banner"

            >
            <Button
                android:layout_width="@dimen/ez35dp"
                android:layout_height="@dimen/ez25dp"
                android:text="公告"
                android:textColor="#fff"

                android:background="@drawable/shape"
                />
            <com.uautogo.qidian.view.FiveTextView
                android:id="@+id/gonggao"
                android:layout_width="@dimen/ez200dp"
                android:layout_height="@dimen/ez20dp"
                android:text=""
                android:layout_marginLeft="@dimen/ez5dp"
                android:textSize="16sp"
                />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/ll"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ez1dp"
            android:background="#fff"
            android:layout_marginLeft="@dimen/ez20dp"
            android:layout_marginRight="@dimen/ez20dp"
            android:layout_marginTop="@dimen/ez5dp"
            />
        <com.uautogo.qidian.view.MyGridview
            android:layout_marginTop="@dimen/ez25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:id="@+id/home_gv"
            android:verticalSpacing="@dimen/ez15dp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"
        android:layout_alignParentBottom="true"

        />
</RelativeLayout>