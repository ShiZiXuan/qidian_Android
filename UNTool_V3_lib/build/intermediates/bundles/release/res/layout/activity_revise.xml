<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_revise"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3e3e3e3"
    android:orientation="vertical"
    tools:context="com.softwinner.un.tool.activity.ReviseActivity">

    <RelativeLayout
        android:id="@+id/center_top_bar"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/center_top_bar_left_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
           />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:text="修改WI-FI密码"
            android:textColor="@color/black"
            android:textSize="18sp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/naem_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:visibility="gone"
       >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:text="SSID:"
            android:textColor="@color/black"
            android:textSize="18dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:cursorVisible="true"
            android:ems="10"
            android:id="@+id/name_et"
            android:hint="智慧ETC123444"
            android:maxLength="10"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:shadowColor="@color/colorPrimary"
            android:textColorHint="@color/gray"
            android:textCursorDrawable="@null"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:id="@+id/oldpassword_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="旧密码:"
            android:textColor="@color/black"
            android:textSize="18dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:id="@+id/oldpassword_et"
            android:cursorVisible="true"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="默认:1234567890"
            android:maxLength="10"
            android:maxLines="1"
            android:paddingLeft="20dp"
            android:shadowColor="@color/colorPrimary"
            android:textColorHint="@color/gray"
            android:textCursorDrawable="@null"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:id="@+id/newpassword_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="新密码:"
            android:textColor="@color/black"
            android:textSize="18dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:cursorVisible="true"
            android:ems="10"
            android:inputType="textPassword"
            android:id="@+id/newpassword_et"
            android:hint="请输入8位有效的数字或字母"
            android:maxLength="10"
            android:maxLines="1"
            android:paddingLeft="20dp"
            android:shadowColor="@color/colorPrimary"
            android:textColorHint="@color/gray"
            android:textCursorDrawable="@null"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:id="@+id/surepassword_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="确认密码:"
            android:textColor="@color/black"
            android:textSize="18dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:cursorVisible="true"
            android:hint="请输入8位有效的数字或字母"
            android:maxLength="10"
            android:maxLines="1"
            android:inputType="textPassword"
            android:id="@+id/surepassword_et"
            android:paddingLeft="20dp"
            android:shadowColor="@color/colorPrimary"
            android:textColorHint="@color/gray"
            android:textCursorDrawable="@null"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>

    <Button
        android:id="@+id/sure_btn"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="140dp"
        android:background="@drawable/password"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="18dp"/>
</LinearLayout>
