<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.WifiListActivity">

    <RelativeLayout
        android:id="@+id/wifi_top_bar"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/top_bar_left_img"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="11dp"/>

        <TextView
            android:id="@+id/top_bar_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:text="WIFI列表"
            android:textSize="20sp"/>

    </RelativeLayout>

    <View
        android:id="@+id/login_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/wifi_top_bar"
        android:background="@color/gray" />

    <ListView
        android:id="@+id/wifi_list"
        android:layout_below="@+id/login_line"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:divider="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</RelativeLayout>