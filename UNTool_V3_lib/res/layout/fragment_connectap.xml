<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            >
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AP Name"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                />
            
            <EditText 
                android:id="@+id/ap_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:hint="Input Your AP Name"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            
            <TextView 
                android:id="@+id/ap_pwd_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                />
            
            <EditText 
                android:id="@+id/ap_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:hint="Input AP's password"
                android:password="true"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Encryption"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                />
            
            <Spinner 
                android:id="@+id/ap_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                >
                
                <Button
	                android:id="@+id/ap_openap"
	                android:layout_weight="1"
	                android:layout_width="match_parent"
	                android:layout_height="50dp"
	                android:text="Open AP"
	                android:textSize="16sp"
	                android:layout_marginLeft="10dp"
	                android:layout_marginRight="10dp"
	                />
                
                <Button
	                android:id="@+id/ap_generate"
	                android:layout_weight="1"
	                android:layout_width="match_parent"
	                android:layout_height="50dp"
	                android:text="Generate"
	                android:textSize="16sp"
	                android:layout_marginRight="10dp"
	                />
                
            </LinearLayout>
            
        </LinearLayout>
        
    </ScrollView>
    

</LinearLayout>
